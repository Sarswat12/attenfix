# Production environment variables example
# Copy this to .env (or set real secrets in your deployment environment)

# Flask / App
FLASK_ENV=production
FLASK_DEBUG=False
FLASK_PORT=5000
SECRET_KEY=please-change-this-secret

# Database (when using docker-compose, DB host is 'db')
DB_HOST=db
DB_PORT=3306
DB_USER=root
DB_PASSWORD=example
DB_NAME=face_attendance_db

# JWT
JWT_SECRET_KEY=please-change-this-jwt-secret
JWT_ACCESS_TOKEN_EXPIRES=86400

# CORS
CORS_ORIGINS=https://your-frontend-domain.com

# File upload
UPLOAD_FOLDER=/data/uploads
